<h1 class="page-header">Administradores</h1>
<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <% @admin.errors.full_messages.each do |message|  %>
    <ul>
        <li><%= message %></li>
    </ul>
    <% end %>
</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:backoffice, @admin]) do |f| %>
             <div class="form-group">
                <label>Nome</label>
                <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
            </div>
            <div class="form-group">
                <label>Email</label>
                <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
             <div class="form-group">
                <label>Confirmação Senha</label>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
            </div>
            <%= f.submit "Salvar", class: "btn btn-default"%>
            <% end %>
        </div>
    </div>
</div>
</div>
<!-- /.panel-default -->
